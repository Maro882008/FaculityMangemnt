<Application x:Class="Faculty_Management.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Faculty_Management"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="stb" >
            <Setter Property="TextBox.FontWeight" Value="Black"></Setter>
            <Setter Property="TextBox.Background" Value="White"></Setter>
            <Setter Property="TextBox.Foreground" Value="Black"></Setter>
            <Setter Property="TextBox.FontFamily" Value="Roboto"></Setter>
        </Style>
    </Application.Resources>
</Application>
